{
  "name": "js-template-engine",
  "version": "1.0.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@10.9.0",
  "description": "A dynamic templating engine that translates Typescript/JavaScript or JSON data into structured templates across multiple languages.",
  "scripts": {
    "build": "turbo run build",
    "build:watch": "turbo run build:watch",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "dev": "turbo run dev",
    "format": "prettier --write \"packages/*/src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,js,json}\"",
    "prepublishOnly": "pnpm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/djurnamn/js-template-engine.git"
  },
  "keywords": [
    "javascript",
    "js",
    "template",
    "templating",
    "engine",
    "json",
    "react",
    "bem",
    "typescript"
  ],
  "author": "Bj√∂rn Djurnamn <bjorn@djurnamn.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/djurnamn/js-template-engine/issues"
  },
  "homepage": "https://github.com/djurnamn/js-template-engine",
  "engines": {
    "node": ">=14.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.46",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.0",
    "prettier": "^3.5.3",
    "turbo": "^2.5.3",
    "typescript": "^5.4.5",
    "vitest": "^1.6.1"
  }
}
